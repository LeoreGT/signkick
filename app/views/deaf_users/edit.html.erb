<div class= "text-center">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <h1>Keep your SignKick profile up-to-date!</h1>
        <p>Please update information about yourself:</p>
        <%= simple_form_for [@deaf_user] do |f| %>
        <%= f.input :name, placeholder: "Name",required: true, autofocus: true  %>
        <%= f.input :location, placeholder: "Location" %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
