<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class= "text-center search-form sk-search-form">
        <%= form_tag(search_path, method: :get) do %>
        <%= label_tag(:language, "Language") %>
        <%= select_tag("language", options_for_select(Language.all.order('name ASC').pluck(:name), language)) %>
        <%= label_tag(:location, "Where") %>
        <%= select_tag("location", options_for_select(Interpreter.all.order('location ASC').pluck(:location).uniq, location)) %>
        <%= label_tag(:date, "When") %>
        <%= date_field_tag(:date) %>
        <%= submit_tag 'Search', method: :get, class: "sk-btn btn-green" %>
        <!-- button -->
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <% if flash[:no_result] %>
      <div class="pink-flash text-center"><%= flash[:no_result] %></div>
      <% end %>
    </div>
  </div>
</div>



