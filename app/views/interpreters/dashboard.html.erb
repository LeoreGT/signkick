<div class="container">
  <div class="row">
    <div class= "dashboard-container">

      <div class="col-xs-12 col-sm-4">
       <div class= "text-center">
         <%= image_tag @interpreter.photo, class: "dashboard-profile-pic" %>
         <h1><%= @interpreter.name %></h1>
         <div class= "dashboard-icon">
          <i class="fa fa-american-sign-language-interpreting"></i>
        </div>
        <div class= "profile-edit-link profile-hover-link" href="#">Edit Profile</div>
      </div>
    </div>

    <div class="col-xs-12 col-sm-4">
      <div class="dashboard-bio">
        <h2>ABOUT</h2><p><%=@interpreter.bio%></p>
        <h3>LANGUAGES</h3>
        <% @interpreter.languages.each do |language|%>
        <p><%= language.name %></p>
        <% end %>
        <h3>LOCATION</h3> <p><%= @interpreter.location %></p>
        <h3>PRICE PER HOUR</h3> <p><%= @interpreter.price %></p>
        <h3>YEARS EXPERIENCE</h3> <p><%= @interpreter.years_of_experience %></p>
      </div>
    </div>

    <div class="col-xs-12 col-sm-4">
      <div class="dashboard-rating">
        <h2>OVERALL RATING: <%= @interpreter.overall_performance ? (@interpreter.overall_performance).round(1) : "/"%></h2>
        <p>Language Skill: <%= @interpreter.language_ability ? (@interpreter.language_ability).round(1) : "/" %></p>
        <p>Friendliness: <%= @interpreter.friendliness ? (@interpreter.friendliness).round(1) : "/" %></p>
        <p>Professionalism: <%= @interpreter.professionalism ? (@interpreter.professionalism).round(1) : "/" %></p>
        <p>Punctuality: <%= @interpreter.punctuality ? (@interpreter.punctuality).round(1) : "/" %></p>
      </div>
      <p>
        <i class="fa fa-star"></i>
        <i class="fa fa-star"></i>
        <i class="fa fa-star"></i>
        <i class="fa fa-star-half"></i>
      </p>
    </div>


