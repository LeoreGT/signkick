<div class="col-xs-12 col-sm-4">
  <div class="card-container">
   <div class="card">
     <div class="front">
       <div class="cover">
         <img src="<%= image_path 'cover.jpeg'%>"/>
       </div>
       <div class="user">
         <%= image_tag interpreter.photo , class: "img-circle" %>
       </div>
       <div class="content">
         <div class="main">
           <h3 class="name"><%= interpreter.name %></h3>
           <p class="profession"><%= interpreter.location %></p>
           <p class="text-center">Rating: <%= ((interpreter.overall_performance).to_f).round(1)%></p>
         </div>
         <div class="footer">
           <div class="rating">
             <i class="fa fa-mail-forward"></i>
           </div>
         </div>
       </div>
     </div> <!-- end front panel -->
     <div class="back">
      <%= link_to interpreter_path(interpreter) do %>
      <div class="header">
       <h5 class="motto"> Access <%=interpreter.name%>'s Profile</h5>
     </div>
     <div class="content">
       <div class="main">
         <h4 class="text-center">Bio</h4>
         <p class="text-center"><%= interpreter.bio %></p>
         <div class="stats-container">
           <div class="stats">
            <%if interpreter.years_of_experience.nil? %>
                <h4>Languages</h4>
                <p>
                 <% interpreter.languages.each do |language|%>
                 <p><%= language.name %></p>
                 <% end %>
               </p>
             </div>
             <div class="stats">
               <h4>Location</h4>
               <p>
                 <%= intepreter.location %>
            <% else %>
               <h4>Languages</h4>
               <p>
                 <% interpreter.languages.each do |language|%>
                 <p><%= language.name %></p>
                 <% end %>
               </p>
             </div>
             <div class="stats">
               <h4>Experience</h4>
               <p>
                 <%= interpreter.years_of_experience %>
            <% end %>
             </p>
           </div>
         </div>
       </div>
     </div>
     <% end %>
     <div class="footer">
       <div class="social-links text-center">
         <a href="http://facebook.com" class="facebook"><i class="fa fa-facebook fa-fw"></i></a>
         <a href="http://google.com" class="google"><i class="fa fa-google-plus fa-fw"></i></a>
         <a href="http://twitter.com" class="twitter"><i class="fa fa-twitter fa-fw"></i></a>
       </div>
     </div>

   </div> <!-- end back panel -->
 </div> <!-- end card -->
</div> <!-- end card-container -->
</div>
